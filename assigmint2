/* Default style for all views */
section {
  float: left;
  width: 33.333%; /* Each section takes up 1/3 of the screen */
}

/* Tablet view (between 768px and 991px, inclusively) */
@media (min-width: 768px) and (max-width: 991px) {
  /* First 2 sections are in the first row and are of equal size */
  section:nth-of-type(-n+2) {
    width: 50%; /* Each section takes up 1/2 of the screen */
  }

  /* 3rd section is in the second row and takes up the entire row */
  section:nth-of-type(3) {
    width: 100%; /* 3rd section takes up the entire row */
    clear: both;
  }
}

/* Mobile view (equal to or less than 767px) */
@media (max-width: 767px) {
  /* Each section takes up the entire row */
  section {
    width: 100%; /* Each section takes up the entire row */
    clear: both;
  }
}
